    maxActive="10"
    maxIdle ="5"
    maxWait="15000"
    driverClassName="org.postgresql.Driver"
    url="jdbc:postgresql://postgresserver:5432/dbNameXX"
    username="XX"
    password="XX" />
  -->

</Context>
